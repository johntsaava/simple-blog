{
  "builds": [
    {
      "src": "server.cjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["db.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/((?!/api).)*",
      "dest": "/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.cjs"
    }
  ]
}
